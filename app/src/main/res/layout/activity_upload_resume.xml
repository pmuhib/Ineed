<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidtutorialpoint.ineed.proj.activities.UploadResumeActivity">
    <include layout="@layout/toolbar"></include>

    <FrameLayout
        android:id="@+id/frame_upload"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:background="#FFB2B2B3"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume.docx"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_upload"/>
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upload"
        android:background="@color/appbasecolor"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:text="Upload"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_dark_grey" />

        <TextView
            android:paddingTop="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:textSize="@dimen/extra_small_size"
            android:layout_height="wrap_content"
            android:text="Supported format DOC, DOCX, PDF, RTF\n Maximum file size 2MB"
            android:gravity="center"
            android:textColor="@color/color_dark_grey"/>

    </LinearLayout>

</LinearLayout>
