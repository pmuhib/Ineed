<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:background="@color/appbasecolor">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/contact"
                android:scaleType="fitXY"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:padding="10dp"
            android:orientation="vertical">

        <EditText
            style="@style/simplerectangle"
            android:background="@color/white"
            android:hint="First Name"
            android:id="@+id/contact_etFName"
            android:imeOptions="actionNext"
            android:inputType="text"/>
        <EditText
            style="@style/simplerectangle"
            android:background="@color/white"
            android:hint="Last Name"
            android:id="@+id/contact_etLName"
            android:imeOptions="actionNext" />
        <EditText
            style="@style/simplerectangle"
            android:background="@color/white"
            android:hint="Email"
            android:id="@+id/contact_etEmail"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext" />
        <EditText
            style="@style/simplerectangle"
            android:background="@color/white"
            android:hint="Phone"
            android:inputType="number"
            android:id="@+id/contact_etPhone"
            android:imeOptions="actionNext"/>
        <EditText
            android:id="@+id/contact_etMsg"
            style="@style/simplerectangle"
            android:background="@color/white"
            android:hint="Message"
            android:padding="15dp"
            android:imeOptions="actionDone" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send us"
            android:id="@+id/contact_send"
            android:background="@color/appbasecolor"
            android:textColor="#fff"
            android:padding="13dp"
            android:layout_margin="10dp"
            android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WANT TO HELP OR HAVE QUESTIONS?"
                android:textColor="@color/black"
                android:padding="1dp"
               android:layout_margin="10dp"
                android:gravity="center"/>
            <TextView
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1800-459-5500"
                android:textColor="@color/appbasecolor"
                android:padding="1dp"
                android:visibility="gone"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/contactlocation"/>
            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit Us"
                android:textColor="@color/black"
                android:padding="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al Hamriya Building, office 137, Al Hamriya, Dubai- UAE"
                android:textColor="@color/black"
                android:padding="1dp"
                android:gravity="center"/>
            <ImageView
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/phone"/>
            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contactus"
                android:textColor="@color/black"
                android:padding="1dp"
                android:gravity="center"/>

            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0971562424444"
                android:textColor="@color/black"
                android:padding="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="support@ineed.biz"
                android:textColor="@color/black"
                android:padding="1dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
