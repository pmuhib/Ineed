<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
   >
    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:padding="10dp"
        android:orientation="vertical">


    <EditText
        style="@style/simplerectangle"
        android:hint="Current Password"
        android:imeOptions="actionNext"
        android:id="@+id/change_pass_edtCurrent"
        android:inputType="textPassword"/>
    <EditText
        style="@style/simplerectangle"
        android:hint="New Password"
        android:id="@+id/change_pass_edtNew"
        android:imeOptions="actionNext"
        android:inputType="textPassword"/>
    <EditText
        style="@style/simplerectangle"
        android:hint="Confirm Password"
        android:imeOptions="actionDone"
        android:id="@+id/change_pass_edtNewConfirm"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:background="@color/appbasecolor"
        android:textColor="#fff"
        android:id="@+id/change_pass_btnUpdate"
        android:padding="13dp"
        android:layout_margin="10dp"
        android:gravity="center"/>
</LinearLayout>
</LinearLayout>
