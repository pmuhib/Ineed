<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="7dp"
                android:paddingTop="10dp"
                android:background="@color/appbasecolor">
                <FrameLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/emp_img_profilew"
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gfgf"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:padding="5dp"
                        android:id="@+id/emp_img_camera"
                        android:src="@drawable/ic_photo_camera" />

                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:gravity="center"
                    android:id="@+id/etProfile_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                card_view:cardElevation="15dp"
                card_view:contentPadding="3dp"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="6dp">
                <TextView
                    android:id="@+id/txt_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:padding="5dp"
                    android:textColor="@color/appbasecolor"
                    android:drawableRight="@drawable/ic_pencil_edit_button"
                    android:drawableEnd="@drawable/ic_pencil_edit_button"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:padding="4dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Company"
                            android:padding="4dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:padding="4dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:padding="4dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:padding="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harish Kumar"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:background="@android:color/transparent"
                            />
                        <EditText
                            android:id="@+id/et_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harish Kumar"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:background="@android:color/transparent"
                            />
                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harish Kumar"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:background="@android:color/transparent"
                            />
                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+91 8881238761"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:background="@android:color/transparent"
                            />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_savecancel"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_save"
                    android:background="@color/appbasecolor"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Save"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/txt_cancel"
                    android:background="@drawable/simplerectangle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Cancel"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_view1"
                android:layout_gravity="center"
                card_view:cardElevation="15dp"
                card_view:contentPadding="3dp"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="6dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/plandetails"
                    android:drawableRight="@drawable/ic_pencil_edit_button"
                    android:drawableEnd="@drawable/ic_pencil_edit_button"
                    android:padding="5dp"
                    android:textColor="@color/appbasecolor"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/packkage"
                            android:padding="4dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Expired"
                            android:padding="4dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/creditpoint"
                            android:padding="4dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/credituse"
                            android:padding="4dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/creditleft"
                            android:padding="4dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:padding="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/et_package"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harish Kumar"
                            android:textColor="@color/black"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:background="@android:color/transparent"
                            />
                        <TextView
                            android:id="@+id/et_expired"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25 December 2017"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            android:background="@android:color/transparent"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:id="@+id/credit_point"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:scrollbars="horizontal"

                            />
                        <TextView

                            android:id="@+id/credit_left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:scrollbars="horizontal" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/txt_profileViewed"
                android:padding="12dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Viewed"
                android:layout_margin="7dp"
                android:background="@color/appbasecolor"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>