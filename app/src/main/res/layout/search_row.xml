<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/simplerectangle">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_marginTop="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingBottom="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appbasecolor"
                    android:id="@+id/txtName"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="John "/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/driver_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|right"
                    android:layout_gravity="end|right"
                    android:textSize="13sp"
                    android:text="17 August 2017"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_exp"
                    android:drawableStart="@drawable/ic_exp"
                    android:id="@+id/txtExp"
                    android:drawablePadding="7dp"
                    android:text="2-10 Years"/>
                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_age"
                    android:drawableStart="@drawable/ic_age"
                    android:drawablePadding="7dp"
                    android:id="@+id/txtAge"
                    android:textColor="#000"
                    android:text="Age"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/txtDegree"
                android:drawableLeft="@drawable/degree"
                android:drawableStart="@drawable/degree"
                android:drawablePadding="7dp"
                android:text="Php Developer"/>

            <TextView
                android:id="@+id/txt_salary"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_salary"
                android:drawableStart="@drawable/ic_salary"
                android:drawablePadding="7dp"
                android:text="UAE Dubai"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_gender"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_gender"
                android:drawableStart="@drawable/ic_gender"
                android:drawablePadding="7dp"
                android:text="UAE Dubai"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>